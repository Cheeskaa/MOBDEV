<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ToDoFull_CHIZZZ.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ToDoFull_CHIZZZ"
    TabBarBackgroundColor="#E6B9A2"
    TabBarUnselectedColor="Black"
    TabBarForegroundColor="#8C1A11"
    TabBarTitleColor="#8C1A11"
    BackgroundColor="#E6B9A2">

    <TabBar>
        <ShellContent Title="ToDo"
                      ContentTemplate="{DataTemplate local:ToDoPage}"
                      Icon="completed.svg"/>
        <ShellContent Title="Completed"
                      ContentTemplate="{DataTemplate local:CompletedPage}"
                      Icon="todo.svg"/>
        <ShellContent Title="Profile"
                      ContentTemplate="{DataTemplate local:ProfilePage}"
                      Icon="profile.svg"/>
    </TabBar>

</Shell>
